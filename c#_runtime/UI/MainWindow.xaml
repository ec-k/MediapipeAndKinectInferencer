<Window x:Class="KinectPoseInferencer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:helix="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        xmlns:converters="clr-namespace:KinectPoseInferencer.UI.Converters"
        mc:Ignorable="d"
        Title="Kinect Pose Inferencer" Height="600" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,20,20" VerticalAlignment="Top">
            <Grid.Resources>
                <sys:Double x:Key="RowHeight">30.0</sys:Double>

                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Height" Value="{StaticResource RowHeight}"/>
                </Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Height" Value="{StaticResource RowHeight}"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="video" VerticalAlignment="Center" Margin="0,0,10,30"/>
            <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding VideoFilePath}" Margin="0,0,0,30"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="log"   VerticalAlignment="Center" Margin="0,0,10,30"/>
            <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding LogFilePath}" Margin="0,0,0,30"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="meta"  VerticalAlignment="Center" Margin="0,0,10,30"/>
            <TextBox   Grid.Row="2" Grid.Column="1" Text="{Binding MetaFilePath}" Margin="0,0,0,30"/>

            <Button Grid.Row="3" Grid.Column="0" Command="{Binding LoadFilesCommand}">
                <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xED25;"/>
            </Button>
            
        </Grid>

        <!-- Video View -->
        <Border x:Name="VideoWindowBorder"
                Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                Background="Black" CornerRadius="4"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Viewbox x:Name="VideoWindowViewBox" Stretch="Uniform">
                <Grid Width="640" Height="360" ClipToBounds="True">
                    <Image Source="{Binding ColorBitmap}" Stretch="Fill"/>
                    <Canvas x:Name="DrawingCanvas"/>
                </Grid>
            </Viewbox>
        </Border>

        <!-- Seek Bar -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,20,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Seek Bar -->
            <Slider Grid.Column="0"
                    Minimum="0"
                    Maximum="{Binding TotalDurationSeconds}"
                    Value="{Binding CurrentPositionSeconds}"
                    Height="8"
                    VerticalAlignment="Center"
                    Style="{DynamicResource SeekSliderStyle}"
                    />

            <!-- Current Time -->
            <TextBlock Grid.Column="1" Text="{Binding CurrentTimeDisplay}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </Grid>


        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">

            <!-- Stop / Rewind Button -->
            <Button Command="{Binding RewindCommand}" Width="80" Height="60" Margin="0,0,20,0">
                <!-- Rewind Icon -->
                <Grid>
                    <Rectangle Width="8" Height="30" Fill="White" HorizontalAlignment="Left"/>
                    <Path Data="M 30,15 L 50,25 L 30,35 Z" Stretch="Fill" Fill="White" Width="23" HorizontalAlignment="Center" Margin="0,14,0,14" RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </Button>

            <!-- Play / Pause Button -->
            <Button Command="{Binding PlayOrPauseCommand}" Width="80" Height="60">

                <Grid>
                    <TextBlock FontFamily="Segoe Fluent Icons" Text="{Binding PlayPauseIconUnicode}"/>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>
</Window>